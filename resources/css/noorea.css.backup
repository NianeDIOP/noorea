}

.navbar-bg-2 {
    animation: navbar-bg-2 30s ease-in-out infinite;
    animation-delay: 8s;
}

/* Styles pour les icônes de navigation discrètes */
.navbar-icon {
    color: rgba(255, 255, 255, 0.8);
    opacity: 0.85;
    transition: all 0.3s ease;
}

.navbar-icon:hover {
    color: rgba(212, 175, 55, 0.9);
    opacity: 1;
    transform: scale(1.1);
}

.navbar-mobile-icon {
    color: rgba(255, 255, 255, 0.8);
    opacity: 0.85;
    transition: all 0.3s ease;
}

.navbar-mobile-icon:hover {
    color: rgba(212, 175, 55, 0.9);
    opacity: 1;
}

/* Logo navbar discret */
.navbar-logo {
    opacity: 0.8;
    transition: all 0.3s ease;
}

.navbar-logo:hover {
    opacity: 1;
    transform: scale(1.05);
}

/* === AMÉLIORATION LOGO ET ICÔNES === */

/* Logo naturel sans filtres */
.navbar-logo img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
}

/* Icônes navbar améliorées */
.navbar-icon {
    filter: brightness(110%) contrast(110%) drop-shadow(0 1px 2px rgba(0,0,0,0.1));
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
}

.navbar-icon:hover {
    filter: brightness(120%) contrast(120%) drop-shadow(0 2px 4px rgba(212, 175, 55, 0.3));
    transform: scale(1.1) translateZ(0);
    -webkit-transform: scale(1.1) translateZ(0);
}

/* Badge panier amélioré */
.navbar-icon .absolute {
    filter: brightness(105%) contrast(110%) drop-shadow(0 1px 2px rgba(0,0,0,0.2));
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
}

/* Optimisation des images en général */
img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: optimize-contrast;
    image-rendering: crisp-edges;
}

/* Logo mobile spécifique */
@media (max-width: 768px) {
    .navbar-logo img {
        filter: brightness(115%) contrast(130%) saturate(115%) drop-shadow(0 1px 3px rgba(0,0,0,0.15));
    }
}
