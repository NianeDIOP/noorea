/* Particules dorées avancées */
@keyframes hero-particle-drift {
    0% {
        transform: translateY(100vh) translateX(0px) scale(0) rotate(0deg);
        opacity: 0;
    }
    10% {
        opacity: 1;
        transform: scale(1) rotate(45deg);
    }
    90% {
        opacity: 1;
        transform: rotate(315deg);
    }
    100% {
        transform: translateY(-100px) translateX(100px) scale(0) rotate(360deg);
        opacity: 0;
    }
}

.hero-particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: radial-gradient(circle, #FFD700 0%, #D4AF37 50%, transparent 100%);
    border-radius: 50%;
    pointer-events: none;
    box-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
}

.hero-particle-1 { left: 5%; animation: hero-particle-drift 18s linear infinite; }
.hero-particle-2 { left: 15%; animation: hero-particle-drift 22s linear infinite 3s; }
.hero-particle-3 { left: 35%; animation: hero-particle-drift 20s linear infinite 6s; }
.hero-particle-4 { left: 55%; animation: hero-particle-drift 24s linear infinite 9s; }
.hero-particle-5 { left: 75%; animation: hero-particle-drift 19s linear infinite 12s; }
.hero-particle-6 { left: 85%; animation: hero-particle-drift 21s linear infinite 15s; }
.hero-particle-7 { left: 25%; animation: hero-particle-drift 23s linear infinite 18s; }
.hero-particle-8 { left: 65%; animation: hero-particle-drift 17s linear infinite 21s; }

/* Cercles lumineux flottants */
@keyframes hero-light-float {
